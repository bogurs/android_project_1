<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity">

    <EditText
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentTop="true" android:layout_marginTop="20dp" android:id="@+id/idText"
            android:layout_centerHorizontal="true" android:hint="아이디"/>
    <EditText
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/idText" android:layout_alignStart="@+id/idText"
            android:id="@+id/passwordText" android:hint="비밀번호"/>
    <EditText
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/passwordText" android:layout_alignStart="@+id/idText"
            android:id="@+id/nameText" android:hint="이름"/>
    <EditText
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/nameText" android:layout_alignStart="@+id/idText"
            android:id="@+id/ageText" android:hint="나이"/>
    <Button
            android:text="회원가입"
            android:layout_width="360dp"
            android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_marginTop="213dp"
            android:layout_alignStart="@+id/idText" android:id="@+id/registerButton"/>
</RelativeLayout>