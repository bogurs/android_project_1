<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        tools:context=".LoginActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="55dp"
            android:text="스케쥴 쉐어"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_margin="50dp"
            android:drawableRight="@drawable/ic_forum_black_24dp"
    />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/idText"
            android:hint="아이디" android:layout_centerHorizontal="true"
            android:textColorHint="@color/colorGray"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/edittext_login"
            android:drawableLeft="@drawable/ic_person_black_24dp"

    />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordText"
            android:hint="비밀번호"
            android:layout_centerHorizontal="true"
            android:textColorHint="@color/colorGray"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_login"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
    />

    <Button
            android:text="로그인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordText"
            android:id="@+id/loginButton"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_login"
            android:textColor="@color/colorGray"
            android:layout_gravity="center_horizontal"
            android:drawableRight="@drawable/ic_arrow_downward_black_24dp"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerButton"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/loginButton" android:text="회원가입"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="15dp"
            android:drawableRight="@drawable/ic_input_black_24dp"
    />
</LinearLayout>