<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <EditText
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/idText"
            android:hint="아이디" android:layout_centerHorizontal="true" android:layout_above="@+id/passwordText"/>
    <EditText
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordText"
            android:hint="비밀번호" android:layout_above="@+id/loginButton" android:layout_marginBottom="-105dp"
            android:layout_centerHorizontal="true"/>
    <Button
            android:text="로그인"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:id="@+id/loginButton"
            android:layout_alignParentTop="true" android:layout_marginTop="109dp"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerButton"
            tools:text="회원가입"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_centerHorizontal="true" android:layout_below="@+id/loginButton"/>
</RelativeLayout>